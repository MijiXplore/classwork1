<style>
table, th, td {
    border: 1px solid black;
    padding: .5em;
}

</style>
@{

    var count = 1;



    <p>Users List:</p>
    
    @if (ViewBag.usersList.Count != 0)
    {
        <table>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
            @foreach (var eachUser in (List<user>)ViewBag.usersList)
            {
                <tr>
                    <td>@count</td>
                    <td>@eachUser.name</td>
                    <td>@eachUser.email</td>
                    <td>@eachUser.role </td>
                    <td>
                        <a class="btn btn-primary"><i class="bi bi-pen-fill"></i>Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-primary bg-dark" asp-action="DeleteUser" asp-controller="Home">Delete</a>
                    </td>
                </tr>
                count+=1;
            }

        </table>
        <th></th>

        //@ViewBag.newerrorMessage
    }

     
}
